<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tashsmit.c4q.nyc.fragments.WeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/weather_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aurora_short"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/clock_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="7:00"
                    android:textSize="60dp" />

                <TextView
                    android:id="@+id/am_pm"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="AM"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Thu, June 25"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sevenday_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sevenday_dayOfWeek"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dayOne"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="Sun" />

                    <TextView
                        android:id="@+id/dayTwo"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="Mon" />

                    <TextView
                        android:id="@+id/dayThree"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="Tue" />

                    <TextView
                        android:id="@+id/dayFour"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="Wed" />

                    <TextView
                        android:id="@+id/dayFive"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="Thu" />

                    <TextView
                        android:id="@+id/daySix"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="Fri" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sevenday_dates"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateOne"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="06/28" />

                    <TextView
                        android:id="@+id/dateTwo"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="06/29" />

                    <TextView
                        android:id="@+id/dateThree"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="06/30" />

                    <TextView
                        android:id="@+id/dateFour"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="07/01" />

                    <TextView
                        android:id="@+id/dateFive"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="07/02" />

                    <TextView
                        android:id="@+id/dateSix"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="07/03" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sevenday_icons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dayone_icon"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/day_sunny" />

                    <ImageView
                        android:id="@+id/daytwo_icon"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/day_sunny"/>

                    <ImageView
                        android:id="@+id/daythree_icon"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/day_sunny" />

                    <ImageView
                        android:id="@+id/dayfour_icon"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/day_sunny" />

                    <ImageView
                        android:id="@+id/dayfive_icon"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/day_sunny" />

                    <ImageView
                        android:id="@+id/daysix_icon"
                        android:layout_width="75dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/day_sunny" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sevenday_temps"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dayoneTemp"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="79°/59°" />

                    <TextView
                        android:id="@+id/daytwoTemp"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="79°/59°" />

                    <TextView
                        android:id="@+id/daythreeTemp"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="79°/59°" />

                    <TextView
                        android:id="@+id/dayfourTemp"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="79°/59°" />

                    <TextView
                        android:id="@+id/dayfiveTemp"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="79°/59°" />

                    <TextView
                        android:id="@+id/daysixTemp"
                        style="@style/AudioFileInfoOverlayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="79°/59°" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="4"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:text="Long Island City"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/temperature"
                    style="@style/AudioFileInfoOverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:text="82°F"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/main_forecast"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/day_sunny"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>
